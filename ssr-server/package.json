{
  "name": "ssr-server",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "nodemon --exec babel-node index",
    "dev:spa": "vite",
    "build": "npm-run-all -p build:*",
    "build:client": "vite build --ssrManifest --outDir dist/client",
    "build:server": "vite build --ssr src/entry-server.ts --outDir dist/server",
    "build:express-api": "babel src --out-dir dist/src",
    "build:express-entry": "babel server.js --out-file dist/server.js && babel index.js --out-file dist/index.js ",
    "serve": "NODE_ENV=production node dist/index.js",
    "test": "cross-env NODE_ENV=test jest",
    "eslint:jest": "eslint __tests__/**/*.js --fix",
    "eslint:ts": "eslint src/**/*.ts --fix",
    "eslint:vue": "eslint src/**/*.vue --fix",
    "eslint:js": "eslint src/**/*.js --fix",
    "eslint:entry": "eslint server.js --fix",
    "lintfix": "npm-run-all -p eslint:*",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "@babel/preset-env": "^7.16.11",
    "axios": "^0.26.1",
    "compression": "^1.7.4",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "log4js": "^6.4.4",
    "vue": "^3.2.25",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/node": "^7.16.8",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/vue3": "^6.4.22",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "@vitejs/plugin-vue": "^2.3.0",
    "babel-loader": "^8.2.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.13.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-vue": "^8.6.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "supertest": "^6.2.2",
    "typescript": "^4.6.3",
    "vite": "^2.9.0",
    "vue-loader": "^16.8.3",
    "vue-tsc": "^0.29.8"
  }
}
